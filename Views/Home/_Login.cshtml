@model LoginUser

<div class="card">
    <div class="card-header bg-info text-white">Login</div>
    <div class="card-body">
        <form asp-action="login" asp-controller="Home">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Username:</label>
                        <input asp-for="LoginUsername"  />
                        <span asp-validation-for="LoginUsername" class="text-danger"></span>
                    <div class="form-group">
                        <label>Password:</label>
                        <input asp-for="LoginPassword"  />
                        <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    </div>
                </div>
            <input type="submit" class="btn btn-outline-success" value="Login" />
        </form>
    </div>
</div>