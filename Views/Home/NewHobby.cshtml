@model Hobbies
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h3 class="navbar-brand" >Hobby Hub</h3>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link active" href="/hobby">Hobbies <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link active" href="newhobby">Add Hobby <span class="sr-only">(current)</span></a>
        </div>
    </div>
</nav>
<div class="card">
    <div class="card-header bg-primary text-white">Create Hobby</div>
    <div class="card-body">
        <form asp-action="addhobby" asp-controller="Home">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Hobby Name:</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    <div class="form-group">
                        <label>Description:</label>
                        <textarea asp-for="Description" class="form-control" ></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" value="Add">Add Hobby</button>
            </div>
            
        </form>
    </div>
</div>