@{
    ViewData["Title"] = "Welcome!";
}
@model List<Hobbies>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h3 class="navbar-brand" >Hobby Hub!</h3>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link active" href="/hobby">Hobbies <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link active" href="newhobby">Add Hobby <span class="sr-only">(current)</span></a>
        </div>
    </div>
</nav>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Enthuiasts</th>
            </tr>
            </thead>
                @foreach (Hobbies hobby in Model)
                {
                    <tbody>
                        <tr>
                            <td><a href="/hobby/@hobby.HobbyId">@hobby.Title</a></td>
                            <td>@hobby.JoiningUser.Count</td>
                        </tr>
                    </tbody>
                }
        </table>
    </div>
</div>
